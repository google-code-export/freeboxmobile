<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF">

	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/LogoFreeboxMobile"
		android:src="@drawable/freebox_mobile" android:layout_gravity="center"
		android:layout_marginBottom="5dip" android:layout_marginTop="5dip"></ImageView>

	<TableLayout 
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="#FFFFFF">
	
	
		<TableRow
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="horizontal">
			<LinearLayout 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:orientation="horizontal">
				<LinearLayout 
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:orientation="vertical">
				
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Telecommande (Horizontal)"		
						android:textStyle="bold"
						android:gravity="center"
					/>
					<ImageButton
						android:layout_width="fill_parent" 
						android:layout_height="fill_parent"
						android:layout_weight="1"
						android:scaleType="fitXY"
						android:layout_gravity="center"
						android:src="@drawable/freebox_big_claire"
						android:id="@+id/remoteHorizontalIB"
					/>
					
				</LinearLayout>			
				<LinearLayout 
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:orientation="vertical">
				
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Telecommande (Vertical)"		
						android:textStyle="bold"
						android:gravity="center"
						
					/>
					<ImageButton
						android:layout_width="fill_parent" 
						android:layout_height="fill_parent"
						android:layout_weight="1"
						android:scaleType="fitXY"
						android:src="@drawable/freebox_big_claire"
						android:id="@+id/remoteVerticalIB"
					/>			
					
				</LinearLayout>
			</LinearLayout>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="horizontal">
			<LinearLayout 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:orientation="horizontal">
				<LinearLayout 
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:orientation="vertical">
				
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Mosaique (Horizontal)"		
						android:textStyle="bold"
						android:gravity="center"
					/>
					<ImageButton
						android:layout_width="fill_parent" 
						android:layout_height="fill_parent"
						android:layout_weight="1"
						android:scaleType="fitXY"
						android:layout_gravity="center"
						android:src="@drawable/freebox_big_claire"
						android:id="@+id/mosaicHorizontalIB"
					/>
					
				</LinearLayout>			
				<LinearLayout 
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:orientation="vertical">
				
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Mosaique (Vertical)"		
						android:textStyle="bold"
						android:gravity="center"
						
					/>
					<ImageButton 
						android:layout_width="fill_parent" 
						android:layout_height="fill_parent"
						android:layout_weight="1"
						android:scaleType="fitXY"
						android:src="@drawable/freebox_big_claire"
						android:id="@+id/mosaicVerticalIB"
						
					/>			
					
				</LinearLayout>
			</LinearLayout>
	
		</TableRow>
	</TableLayout>	
</LinearLayout>
