<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10px"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
        
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:layout_weight="1">
        
 		<ImageView android:id="@+id/pvrLogoChaine"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content">
	 	</ImageView>
	 	
		<TextView
			android:text="@+id/pvrDispChaine"
			android:id="@+id/pvrDispChaine"
			android:textSize="24px"
			android:paddingTop="5px"
			android:paddingLeft="20px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
 
 	</LinearLayout>
 	       
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        
		
		<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/ImageView01"
				android:src="@drawable/pvr_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></ImageView>
			<TextView
				android:text="@+id/pvrDispDate"
				android:id="@+id/pvrDispDate"
				android:paddingLeft="5px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		
		<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/ImageView01"
				android:src="@drawable/pvr_heure"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></ImageView>
			<TextView
				android:text="@+id/pvrDispHeure"
				android:id="@+id/pvrDispHeure"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		
		<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/ImageView01"
				android:src="@drawable/pvr_duree"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></ImageView>
			<TextView
				android:text="@+id/pvrDispDuree"
				android:id="@+id/pvrDispDuree"
				android:paddingLeft="5px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		
		<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/ImageView01"
				android:src="@drawable/pvr_nom"
				android:paddingLeft="5px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></ImageView>
			<TextView
				android:text="@+id/pvrDispNom"
				android:id="@+id/pvrDispNom"
				android:paddingLeft="5px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>
	</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        
        <Button
			android:drawableLeft="@drawable/pvr_btn_modif"
        	android:text="@string/pvrTxtModif" android:id="@+id/pvrBtnModif"
        	android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		<Button
			android:drawableLeft="@drawable/pvr_btn_suppr"
			android:text="@string/pvrTxtSuppr" android:id="@+id/pvrBtnSuppr"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		
	</LinearLayout>

</LinearLayout>