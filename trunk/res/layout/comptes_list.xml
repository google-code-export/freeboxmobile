<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:orientation="vertical" android:padding="10dip">

  <TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/compte_actif" android:textSize="15dip"></TextView><Spinner android:id="@+id/Spinner01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:prompt="@string/compte_choose"></Spinner><TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/comptes_liste" android:textSize="15dip"></TextView><ListView android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>
  <TextView android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/comptes_empty"/>



<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent" android:gravity="right"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/comptes_button_new" android:id="@+id/comptes_button_new"></Button></LinearLayout>

</LinearLayout>
