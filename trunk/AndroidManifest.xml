<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.madprod.freeboxmobile" android:versionCode="19" android:versionName="0.25.1rc1">
    <application android:label="@string/app_name" android:icon="@drawable/icon_fbm">
		<activity android:name=".home.HomeListActivity" android:label="@string/app_name" android:theme="@android:style/Theme.Light.NoTitleBar" android:icon="@drawable/icon_fbm">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"></action>
				<category android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity>
		<activity android:theme="@android:style/Theme.Light" android:name=".home.WhatsNewActivity"></activity>
		<activity android:theme="@android:style/Theme.Light.NoTitleBar" android:name=".home.ComptesActivity"></activity>
		<activity android:theme="@android:style/Theme.Light.NoTitleBar" android:name=".home.ComptesEditActivity"></activity>
		<activity android:theme="@android:style/Theme.Light" android:name=".home.SendlogActivity"></activity>
		<activity android:theme="@android:style/Theme.Light" android:name=".fax.FaxActivity">
			<intent-filter android:label="Fax (Freebox) (beta)">
				<action android:name="android.intent.action.SEND"></action>
     			<category android:name="android.intent.category.DEFAULT"/>
     			<data android:mimeType="application/pdf" />
     			<data android:mimeType="image/jpg" />
     			<data android:mimeType="image/jpeg" />
     			<data android:mimeType="text/plain" />
			</intent-filter>
		</activity>
		<activity android:theme="@android:style/Theme.Light" android:name=".fax.FileChooserActivity"></activity>
    	<activity android:name=".Config"></activity>
    	<activity android:theme="@android:style/Theme.Light.NoTitleBar" android:name=".ligne.LigneInfoActivity"></activity>
		<activity android:theme="@android:style/Theme.Light" android:name=".mvv.MevoActivity"></activity>
		<activity android:theme="@android:style/Theme.Light" android:name=".pvr.EnregistrementsActivity"></activity>
		<activity android:theme="@android:style/Theme.Light" android:name=".pvr.ProgrammationActivity"></activity>
		<activity android:theme="@android:style/Theme.Light" android:name=".pvr.EnregistrementActivity"></activity>

		<service android:name=".mvv.MevoSync"></service>
    	<service android:name=".ligne.InfoAdslCheck"></service>

		<receiver android:name=".OnBootReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
		<receiver android:name=".mvv.OnMevoAlarmReceiver"></receiver>
		<receiver android:name=".ligne.OnInfoAdslAlarmReceiver"></receiver>
	</application>

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
	<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
	<uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"></uses-permission>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

	<support-screens
		android:largeScreens="true"
	    android:normalScreens="true"
	    android:smallScreens="true"
	    android:anyDensity="true">
	</support-screens>
	<uses-sdk
		android:minSdkVersion="3"
		android:targetSdkVersion="4">
	</uses-sdk>
</manifest>
